<% if (success && success.length) { %>
<div class="position-relative">
  <div
    class="alert alert-success alert-dismissible fade show position-absolute top-0 start-50 translate-middle-x"
    role="alert"
  >
    <strong><%=success%>!</strong>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %> <% if (error && error.length) { %>
<div class="position-relative">
  <div
    class="alert alert-danger alert-dismissible fade show position-absolute top-0 start-50 translate-middle-x"
    role="alert"
  >
    <strong><%=error%>!</strong>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
