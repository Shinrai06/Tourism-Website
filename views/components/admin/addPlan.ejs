<% layout('layout') %>

<section class="m-5">
  <h1>New Plan</h1>
  <form method="POST" action="/admin/<%=id%>/new">
    <div class="row g-3">
      <div class="col-md-6">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Title"
        />
      </div>
      <div class="col-12">
        <label for="loc" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="loc"
          placeholder="Main Location(landmarks)"
          name="loc"
        />
      </div>
      <div class="col-md-3">
        <label for="expense" class="form-label">Cost per Person</label>
        <input
          type="text"
          class="form-control"
          id="expense"
          name="expense"
          placeholder="Cost/Person"
        />
      </div>
      <div class="col-md-6">
        <label for="photo" class="form-label">Photo</label>
        <input
          type="text"
          class="form-control"
          id="photo"
          placeholder="Image URL"
          name="photo"
        />
      </div>
      <div class="col-md-3">
        <label for="days" class="form-label">Days</label>
        <input
          type="text"
          class="form-control"
          id="days"
          name="days"
          placeholder="No. of days"
        />
      </div>
      <div class="col-2">
        <label for="maxPeople" class="form-label">Max-People</label>
        <input
          type="text"
          class="form-control"
          id="maxPeople"
          name="maxPeople"
          placeholder="Number of People"
        />
      </div>
      <div class="col-2">
        <label for="date" class="form-label">Departure Date</label>
        <input
          type="text"
          class="form-control"
          id="data"
          name="date"
          placeholder="yyyy-mm-dd"
        />
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Create</button>
  </form>
</section>
